        <bt:Image id="spamIcon16" DefaultValue="https://saskatoon-office-add-on.vercel.app/assets/spam-icon-16.png"/>
        <bt:Image id="spamIcon32" DefaultValue="https://saskatoon-office-add-on.vercel.app/assets/spam-icon-32.png"/>
        <bt:Image id="spamIcon80" DefaultValue="https://saskatoon-office-add-on.vercel.app/assets/spam-icon-80.png"/>
        <bt:Image id="legitimateIcon16" DefaultValue="https://saskatoon-office-add-on.vercel.app/assets/legitimate-icon-16.png"/>
        <bt:Image id="legitimateIcon32" DefaultValue="https://saskatoon-office-add-on.vercel.app/assets/legitimate-icon-32.png"/>
        <bt:Image id="legitimateIcon80" DefaultValue="https://saskatoon-office-add-on.vercel.app/assets/legitimate-icon-80.png"/>
      </bt:Images>
