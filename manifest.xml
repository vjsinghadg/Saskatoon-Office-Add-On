              <Group id="msgReadGroup">
                <Label resid="groupLabel"/>
                <Control xsi:type="Menu" id="reportMenu">
                  <Label resid="reportMenuLabel"/>
                  <Supertip>
                    <Title resid="reportMenuTitle"/>
                    <Description resid="reportMenuDesc"/>
