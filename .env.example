# Example Configuration File
# Copy to .env and update with your values

# Email Configuration
INFOSEC_EMAIL=security-team@company.com
SPAM_REPORT_EMAIL=spam-reports@company.com
SUPPORT_EMAIL=addin-support@company.com

# Server Configuration
PORT=3000
NODE_ENV=development

# GoPhish Configuration (Optional)
GOPHISH_URL=https://gophish.company.com
GOPHISH_LISTENER_PORT=3333
GOPHISH_CUSTOM_HEADER=X-SENTINEL-AJSMN

# External Service Integration (Optional)
# Email API
EMAIL_API_ENDPOINT=https://api.company.com/reports
EMAIL_API_TOKEN=your_api_token_here

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Azure Service Bus
AZURE_SERVICE_BUS_ENDPOINT=https://namespace.servicebus.windows.net
AZURE_SERVICE_BUS_KEY=your_shared_access_key

# Database
DB_API_ENDPOINT=https://db.company.com/api
DB_TOKEN=your_database_token

# Analytics/Logging
LOG_ENDPOINT=https://logging.company.com/api/logs
ANALYTICS_ENDPOINT=https://analytics.company.com/api/track

# Security
JWT_SECRET=your_jwt_secret_key
API_KEY=your_api_key_for_external_calls

# Features
ENABLE_GOPHISH_INTEGRATION=true
ENABLE_EXTERNAL_API=false
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_DATABASE_LOGGING=false

# Logging Levels: debug, info, warn, error
LOG_LEVEL=info
